<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity"
    android:id="@+id/fragment_home_frag">

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_pannel_vp"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            />
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:ci_width="5dp"
            app:ci_height="5dp"
            app:ci_margin="5dp"
            app:ci_drawable="@drawable/selected_radius"
            app:ci_drawable_unselected="@drawable/white_radius"
            app:ci_animator="@anim/scale_with_alpha"
            app:ci_orientation="horizontal"
            app:ci_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/angry_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:background="@drawable/buttonshape"
                    android:text="오늘 발매 음악"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"


                    />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/today_album1"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/lailac_edit"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        >
                        <ImageView
                            android:id="@+id/today_album1_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lailac_edit"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/today_album1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album1_image"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="LILAC"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/today_album1_artist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album1_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="아이유(IU)"
                            android:textSize="10dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/today_album2"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/lailac_edit"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        >
                        <ImageView
                            android:id="@+id/today_album2_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lailac_edit"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/today_album2_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album2_image"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="LILAC"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album2_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="아이유(IU)"
                            android:textSize="10dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/today_album3"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/lailac_edit"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        >
                        <ImageView
                            android:id="@+id/today_album3_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lailac_edit"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/today_album3_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album3_image"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="LILAC"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album3_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="아이유(IU)"
                            android:textSize="10dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/today_album4"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/lailac_edit"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        >
                        <ImageView
                            android:id="@+id/today_album4_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lailac_edit"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/today_album4_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album4_image"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="LILAC"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album4_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="아이유(IU)"
                            android:textSize="10dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/today_album5"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/lailac_edit"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        >
                        <ImageView
                            android:id="@+id/today_album5_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lailac_edit"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                            android:id="@+id/today_album5_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album5_image"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="LILAC"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/today_album5_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="아이유(IU)"
                            android:textSize="10dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    />
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/homeBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:id="@+id/podcast"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="매일 들어도 좋은 팟캐스트"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black">

                </TextView>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape"
                        android:drawableTop="@drawable/chat_shire"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        />
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape"
                        android:drawableTop="@drawable/chat_shire"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        />
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape"
                        android:drawableTop="@drawable/chat_shire"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        />
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape"
                        android:drawableTop="@drawable/chat_shire"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        />
                </LinearLayout>


            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="비디오 컬렉션"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black">

                </TextView>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape"
                        android:drawableTop="@drawable/thumb_nail"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_margin="3dp"
                        />
                    <Button
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape"
                        android:drawableTop="@drawable/thumb_nail"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_margin="3dp"
                        />
                    <Button
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape"
                        android:drawableTop="@drawable/thumb_nail"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:padding="0dp"
                        android:layout_margin="3dp"
                        />

                </LinearLayout>


            </HorizontalScrollView>
        </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/banner2"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/button33"
            >
        </ImageButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|bottom">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/facebook"
                android:background="@android:color/transparent">
            </ImageButton>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/instagram"
                android:background="@android:color/transparent">
            </ImageButton>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/youtube"
                android:background="@android:color/transparent">
            </ImageButton>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/twitter"
                android:background="@android:color/transparent">
            </ImageButton>

        </LinearLayout>


    </LinearLayout>



</ScrollView>